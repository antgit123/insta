<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/feed_user_profile_image"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/myfeed_item_description"
            android:layout_width="219dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="78dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/feed_description"
            android:textSize="8pt" />

        <Button
            android:id="@+id/follow_user_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:background="#1E88E5"
            android:text="@string/follow_user" />

        <TextView
            android:id="@+id/time_posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myfeed_item_description"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:text="@string/sample_time"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>